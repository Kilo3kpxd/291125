
class Solution:
    def minSubarray(self, nums, p):
        total_sum = sum(nums)
        remainder = total_sum % p
        if remainder == 0:
            return 0

        seen = {0: -1}
        prefix_sum = 0
        min_length = len(nums)

        for i, num in enumerate(nums):
            prefix_sum += num
            mod_val = prefix_sum % p
            target = (mod_val - remainder) % p

            if target in seen:
                length = i - seen[target]
                if length < min_length:
                    min_length = length
                    if min_length == 1:  # Early exit
                        return 1

            seen[mod_val] = i

        return min_length if min_length < len(nums) else -1
