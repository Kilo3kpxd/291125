
class Solution:
    def minSubarray(self, nums, p):
        total_sum = sum(nums)
        remainder = total_sum % p

        # If already divisible, no removal needed
        if remainder == 0:
            return 0

        prefix_map = {0: -1}  # prefix_mod -> index
        prefix_sum = 0
        min_length = len(nums)

        for i, num in enumerate(nums):
            prefix_sum += num
            current_mod = prefix_sum % p

            # Find target mod that would fix the remainder
            target = (current_mod - remainder) % p

            if target in prefix_map:
                min_length = min(min_length, i - prefix_map[target])

            # Update prefix_map with current_mod
            prefix_map[current_mod] = i

        return min_length if min_length < len(nums) else -1
