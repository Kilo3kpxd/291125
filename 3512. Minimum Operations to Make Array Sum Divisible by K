
from typing import List

class Solution:
    def minOperations(self, nums: List[int], k: int) -> int:
        """
        Calculate the minimum number of operations required to make
        the sum of nums divisible by k.
        
        Each operation decreases any element by 1.
        
        Logic:
        - Compute total sum of nums.
        - Find remainder when divided by k.
        - That remainder is the number of operations needed.
        
        Time Complexity: O(n)
        Space Complexity: O(1)
        """
        total_sum = sum(nums)
        return total_sum % k
